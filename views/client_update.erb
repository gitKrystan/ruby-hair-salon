<div class="panel panel-default">
  <div class="panel-heading">
    <h4 class="panel-title">Update <%= @client.first_name() %> <%= @client.last_name() %></h4>
  </div>

  <table class="table table-hover">
    <tr>
      <th>Delete</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Phone Number</th>
      <th>Stylist</th>
      <th>Update</th>
    </tr>

    <form action="/clients/<%= @client.id() %>" method="post">
      <td><button type="submit" class="btn btn-danger" name="_method" value="delete">Delete</button></td>
      <td><input type="text" class="form-control" name="first_name" value="<%= @client.first_name() %>"></td>
      <td><input type="text" class="form-control" name="last_name" value="<%= @client.last_name() %>"></td>
      <td><input type="text" class="form-control" name="phone" value="<%= @client.phone() %>"></td>
      <td><select class="form-control" name="stylist_id">
        <% if @client.stylist_id() %>
          <option value="<%= @stylist.id() %>"><%= @stylist.first_name() %> <%= @stylist.last_name() %></option>
        <% else %>
        <option value="">Choose Stylist</option>
        <% end %>
        <% @stylists.each() do |stylist| %>
          <option value="<%= stylist.id() %>"><%= stylist.first_name() %> <%= stylist.last_name() %></option>
        <% end %>
      </select></td>
      <td><button type="submit" class="btn btn-warning" name="_method" value="patch">Update</button></td>
    </form>
  </table>
</div>
