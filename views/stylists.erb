<div class="panel panel-default">
  <div class="panel-heading">
    <h4 class="panel-title">Our Talented Stylists</h4>
  </div>

  <table class="table table-hover">
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Phone Number</th>
      <th>Update</th>
    </tr>

    <tr>
      <form action="/stylists" method="post">
          <td><input required type="text" class="form-control" name="first_name" placeholder="First Name"></td>
          <td><input type="text" class="form-control" name="last_name" placeholder="Last Name"></td>
          <td><input type="text" class="form-control" name="phone" placeholder="###-###-####"></td>
          <td><button type="submit" class="btn btn-default">Add</button></td>
      </form>
    </tr>


    <% @stylists.each() do |stylist| %>
      <tr>
        <td><a href="/stylists/<%= stylist.id() %>">
          <%= stylist.first_name() %></a></td>
        <td><a href="/stylists/<%= stylist.id() %>">
          <%= stylist.last_name() %></a></td>
        <td class="<%= 'warning' if stylist.phone() == "NEED PHONE NUMBER" %>"><%= stylist.phone() %></td>
        <td><a href="/stylists/<%= stylist.id() %>/edit" id="update_<%= stylist.id() %>">
          <button class="btn btn-default btn-xs">Update</button>
        </a></td>
      </tr>
    <% end %>
  </div>
</div>
