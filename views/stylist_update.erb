<div class="panel panel-default">
  <div class="panel-heading">
    <h4 class="panel-title">Update <%= @stylist.first_name() %> <%= @stylist.last_name() %></h4>
  </div>

  <table class="table table-hover">
    <tr>
      <th>Delete</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Phone Number</th>
      <th>Update</th>
    </tr>

    <form action="/stylists/<%= @stylist.id() %>" method="post">
      <td><button type="submit" class="btn btn-danger" name="_method" value="delete">Delete</button></td>
    </form>
    <form action="/stylists/<%= @stylist.id() %>" method="post">
      <td><input required type="text" class="form-control" name="first_name" placeholder="<%= @stylist.first_name() %>"></td>
      <td><input type="text" class="form-control" name="last_name" placeholder="<%= @stylist.last_name() %>"></td>
      <td><input type="text" class="form-control" name="phone" placeholder="<%= @stylist.phone() %>"></td>
      <td><button type="submit" class="btn btn-warning" name="_method" value="patch">Update</button></td>
    </form>
  </table>
</div>
